<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotPassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddf7ff"
    tools:context="com.example.mahadev.umbrellaorganization.MainActivity">

    <ImageView
        android:id="@+id/umbrellaIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/umbrella_logo" />

    <EditText
        android:id="@+id/editTextResult"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editPassword"
        android:layout_below="@+id/umbrellaIcon"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_action_username"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <android.support.v7.widget.CardView
        android:id="@+id/verifyCardView"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:cardBackgroundColor="#000d4d"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:onClick="click"
            android:text="Login"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/serve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verifyCardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:clickable="true"
        android:onClick="click"
        android:text="Forgot Password?"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/progressReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Progress" />

    <Button
        android:id="@+id/userProfileTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="profile" />


</RelativeLayout>
