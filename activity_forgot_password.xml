<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddf7ff"
    tools:context="com.example.mahadev.umbrellaorganization.ForgotPassword">

    <EditText
        android:id="@+id/editTextResult"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:drawableLeft="@drawable/ic_action_username"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textPersonName" />

    <android.support.v7.widget.CardView
        android:id="@+id/verifyCardView"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        app:cardBackgroundColor="#000d4d"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <Button
            android:id="@+id/buttonPrompt"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:onClick="click"
            android:text="send otp"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>


</RelativeLayout>
